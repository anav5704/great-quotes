// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id     String  @id @default(uuid())
  name   String
  email  String
  image  String
  quotes Quote[] @relation(name: "QuoteToUser")
  likes  Like[]  @relation(name: "LikeToUser")

  createAt DateTime @default(now())
}

model Quote {
  id      String @id @default(uuid())
  content String
  userId  String
  user    User   @relation(fields: [userId], references: [id], name: "QuoteToUser")
  likes   Like[] @relation(name: "LikeToQuote")

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([userId])
}

model Like {
  id      String @id @default(uuid())
  userId  String
  user    User   @relation(fields: [userId], references: [id], name: "LikeToUser")
  quoteId String
  quote   Quote  @relation(fields: [quoteId], references: [id], name: "LikeToQuote", onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([userId])
  @@index([quoteId])
}
